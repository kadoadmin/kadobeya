<h1>蔵書</h1>
　　<% @books.each do |book| %>
        <%= book.category %>
        <%= book.number %>
        <%= book.title %>
        <%= book.author %>
        <%= book.publisher %>
        <%= book.date %>
        <%= book.detail %>
        
        <% if admin_signed_in? %>
          <%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <%= link_to "編集", edit_book_path(book.id) %>
        <% end %>
    <% end %>

    <% if admin_signed_in? %>
      <%= link_to "追加", new_book_path(@book.id) %>
    <% end %>
