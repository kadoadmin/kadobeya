<%= form_with model: @book, url: books_path do |f| %>
  <h4>カテゴリー</h4>
  <%= f.text_field :category %>

  <h4>整理番号</h4>
  <%= f.text_field :number %>

  <h4>書名</h4>
  <%= f.text_field :title %>
  
  <h4>著者名</h4>
  <%= f.text_field :author %>
  
  <h4>出版社</h4>
  <%= f.text_field :publisher %>
  
  <h4>購入日</h4>
  <%= f.text_field :date %>
  
  <h4>備考</h4>
  <%= f.text_field :detail %>
  
  <%= f.submit '投稿' %>
<% end %>