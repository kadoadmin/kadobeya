<h1>蔵書編集</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h4>カテゴリー</h4>
  <%= f.text_field :category %>

  <h4>整理番号</h4>
  <%= f.text_field :number %>

  <h4>書名</h4>
  <%= f.text_field :title %>
  
  <h4>著者名</h4>
  <%= f.text_field :author %>
  
  <h4>出版社</h4>
  <%= f.text_field :publisher %>
  
  <h4>購入日</h4>
  <%= f.text_field :date %>
  
  <h4>備考</h4>
  <%= f.text_field :detail %>
  
  <%= f.submit 'Update' %>
  <%= link_to "Back", books_path %>

<% end %>